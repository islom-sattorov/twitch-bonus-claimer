{
  "manifest_version": 3,
  "name": "Twitch Bonus Claimer",
  "version": "1.0",
  "description": "Automatically claims Twitch channel points bonus every 5 minutes",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {

    }
  },
  "icons": {

  }
}
